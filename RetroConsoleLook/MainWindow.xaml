<Window x:Class="RetroConsoleLook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetroConsoleLook"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="Black" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Foreground" Value="White" />
            <!--<Setter Property="FontSize" Value="16" />-->
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock x:Name="textBlockHeadline"></TextBlock>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="374" Background="#FF080707" BorderBrush="#FF616161">
                <StackPanel x:Name="stackPanelConsoleOutput" Orientation="Vertical"></StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
